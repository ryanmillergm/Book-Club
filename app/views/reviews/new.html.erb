
<%= form_for [@book, @review] do |f| %>

<%= f.fields_for @user do |g|%>

<%= g.label :name %>
<%= g.text_field :name %>

<% end %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :rating %>
<%= f.number_field :rating %>

<%= f.label :text %>
<%= f.text_field :text %>

<%= f.submit %>

<% end %>
